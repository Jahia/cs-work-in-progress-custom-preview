<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

<bean class="org.jahia.services.render.customfilter.WorkInProgressPreviewFilter">
   <property name="priority" value="10" />
   <property name="description" value="Displays live version of 'work in progress' content in preview"/>
  <property name="applyOnNodeTypes" value="jmix:lastPublished" />
   <property name="applyOnModes" value="preview"/>
 <property name="applyOnConfigurations" value="page,wrappedcontent,module" />
</bean>
</beans>